// Import required modules
const express = require('express');
const mysql = require('mysql2');
const app = express();
const port = 3000;

// Enable JSON parsing
app.use(express.json());

// Database connection setup
const db = mysql.createConnection({
  host: 'localhost',
  user: 'root',     // change if needed
  password: '',     // add your MySQL password if you have one
  database: 'shopdb'
});

db.connect(err => {
  if (err) {
    console.error('âŒ Database connection failed:', err);
    return;
  }
  console.log('âœ… Connected to MySQL Database: shopdb');
});


// ====================== USERS CRUD ======================

// Get all users
app.get('/api/users', (req, res) => {
  db.query('SELECT * FROM users', (err, results) => {
    if (err) res.status(500).json(err);
    else res.json(results);
  });
});

// Add a new user
app.post('/api/users', (req, res) => {
  const { name, address, age } = req.body;
  const sql = 'INSERT INTO users (name, address, age) VALUES (?, ?, ?)';
  db.query(sql, [name, address, age], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'âœ… User added successfully!', id: result.insertId });
  });
});

// Update a user
app.put('/api/users/:id', (req, res) => {
  const { id } = req.params;
  const { name, address, age } = req.body;
  const sql = 'UPDATE users SET name=?, address=?, age=? WHERE id=?';
  db.query(sql, [name, address, age, id], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'âœï¸ User updated successfully!' });
  });
});

// Delete a user
app.delete('/api/users/:id', (req, res) => {
  const { id } = req.params;
  const sql = 'DELETE FROM users WHERE id=?';
  db.query(sql, [id], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'ðŸ—‘ï¸ User deleted successfully!' });
  });
});


// ====================== PRODUCTS CRUD ======================

// Get all products
app.get('/api/products', (req, res) => {
  db.query('SELECT * FROM products', (err, results) => {
    if (err) res.status(500).json(err);
    else res.json(results);
  });
});

// Add a new product
app.post('/api/products', (req, res) => {
  const { brand, quality, price } = req.body;
  const sql = 'INSERT INTO products (brand, quality, price) VALUES (?, ?, ?)';
  db.query(sql, [brand, quality, price], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'âœ… Product added successfully!', id: result.insertId });
  });
});

// Update a product
app.put('/api/products/:id', (req, res) => {
  const { id } = req.params;
  const { brand, quality, price } = req.body;
  const sql = 'UPDATE products SET brand=?, quality=?, price=? WHERE id=?';
  db.query(sql, [brand, quality, price, id], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'âœï¸ Product updated successfully!' });
  });
});

// Delete a product
app.delete('/api/products/:id', (req, res) => {
  const { id } = req.params;
  const sql = 'DELETE FROM products WHERE id=?';
  db.query(sql, [id], (err, result) => {
    if (err) res.status(500).json(err);
    else res.json({ message: 'ðŸ—‘ï¸ Product deleted successfully!' });
  });
});


// ====================== START SERVER ======================
app.listen(port, () => {
  console.log(ðŸš€ Server running at http://localhost:${port});
});
